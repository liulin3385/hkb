                                imageUrl: "/MallAdmin/Tool/UploadProductEditorImage",
                                fileUrl: "/MallAdmin/Tool/UplaodProductEditorFile"
                            });
                        </script>
                    </td>
                </tr>
                <tr>
                    <td align="right">
                        &nbsp;
                    </td>
                    <td>
                        <a href="" class="addBt submit">
                            <img src="/Admin_Mall/Content/Images/submit.jpg" /></a>
                    </td>
                </tr>
                <tr>
                    <td align="right">
                        &nbsp;
                    </td>
                    <td>
