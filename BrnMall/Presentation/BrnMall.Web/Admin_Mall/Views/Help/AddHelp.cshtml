@model BrnMall.Web.MallAdmin.Models.HelpModel

@section header{
    <title>添加帮助</title>
    <link type="text/css" rel="stylesheet" href="/Admin_Mall/Content/CSS/site.css"/>
    <script type="text/javascript" src="/Admin_Mall/Scripts/jquery.js"></script>
    <link rel="stylesheet" href="/Admin_Mall/Content/UEditor/themes/default/css/ueditor.css"/> 
    <script type="text/javascript" src="/Admin_Mall/Content/UEditor/ueditor.config.js"></script>
    <script type="text/javascript" src="/Admin_Mall/Content/UEditor/ueditor.all.js"></script>
    <script type="text/javascript" src="/Admin_Mall/Scripts/jquery.validate.js"></script>
    <script type="text/javascript" src="/Admin_Mall/Scripts/jquery.validate.unobtrusive.js"></script>
}

@section body{
<h1 class="rightH1">
帮助管理 &gt;&gt; 添加帮助
<div class="right">
<a href="@Html.Raw(ViewData["referer"].ToString())" class="menuBT"><img src="/Admin_Mall/Content/Images/goBack.jpg"/>返回列表</a>
<div class="clear"></div>
</div>
<div class="clear"></div>
</h1>
@using (Html.BeginForm())
{
<div class="addTable">

<table width="100%">
  <tr>
    <td width="76px" align="right">帮助名称：</td>
    <td>@Html.TextBoxFor(x => x.HelpTitle, new { @class = "input", size = "45" })@Html.ValidationMessageFor(x => x.HelpTitle)</td>
    </tr>
                             <tr>
    <td align="right">帮助分类：</td>
    <td>@Html.DropDownListFor(x => x.Pid, ViewData["HelpCategoryList"] as List<SelectListItem>)@Html.ValidationMessageFor(x => x.Pid)
    </td>
    </tr>

      <tr>
    <td align="right">帮助Url：</td>
    <td>@Html.TextBoxFor(x => x.Url, new { @class = "input", size = "45" })@Html.ValidationMessageFor(x => x.Url)</td>
    </tr>

          <tr>
    <td align="right">帮助内容：</td>
    <td>
         <textarea name="Description" id="bspEditor">@Model.Description</textarea>
         <script type="text/javascript">
             UE.getEditor('bspEditor', {
                 imageUrl: "/MallAdmin/Tool/UploadHelpEditorImage",
                 fileUrl: "/MallAdmin/Tool/UplaodHelpEditorFile"
             });
        </script>
    </td>
    </tr>


      <tr>
    <td align="right">排序：</td>
    <td>@Html.TextBoxFor(x => x.DisplayOrder, new { @class = "input", size = "3" })@Html.ValidationMessageFor(x => x.DisplayOrder)</td>
    </tr>
  <tr>
    <td align="right">&nbsp;</td>
    <td>
    <a href="" class="addBt" id="sumbitBut" ><img src="/Admin_Mall/Content/Images/submit.jpg" /></a>
        <script type="text/javascript">
            $(function () {
                $("#sumbitBut").click(function () {
                    $("form:first").submit();
                    return false;
                })
            });
        </script>
    </td>
    </tr>
  <tr>
    <td align="right">&nbsp;</td>
    <td>&nbsp;</td>
    </tr>
</table>
</div>
}
}